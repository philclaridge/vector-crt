{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "removeComments": false,
    "outDir": "./scripts",
    "rootDir": "./scripts"
  },
  "include": ["scripts/*.ts"],
  "exclude": ["node_modules"]
}
